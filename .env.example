# Coinbase API Configuration
COINBASE_API_KEY_ID=organizations/your-org-id/apiKeys/your-api-key-id
COINBASE_API_SECRET=your_api_secret_here
COINBASE_API_NICKNAME=your_api_nickname
PORTFOLIO_NAME=your_portfolio_name

# Trading Configuration
TRADING_PAIR=SYRUP-USDC
BASE_CURRENCY=SYRUP
QUOTE_CURRENCY=USDC

# Trading Parameters
MAKER_FEE=0.6  # Maker fee percentage
TAKER_FEE=1.2  # Taker fee percentage
PROFIT_THRESHOLD=2.0  # Minimum profit threshold in %
POST_ONLY_SELLS=true  # Use post-only limit orders for sells

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=logs/syrup-bot.log

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here  # Optional: Set to restrict bot to specific chat
TELEGRAM_ADMIN_USERNAME=your_telegram_username  # Without @ symbol, e.g., 'johndoe'
TELEGRAM_NOTIFICATIONS_ENABLED=true  # Set to false to disable all Telegram notifications
